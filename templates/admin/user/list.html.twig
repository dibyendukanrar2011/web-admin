{% extends 'admin_base.html.twig' %}

{% block title %}
    {{parent()}}{{title}}
{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card shadow p-4">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Cellphone</th>
                            <th>Gender</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.fullName }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.cellphone }}</td>
                                <td>{{ user.gender }}</td>
                                <td>{{ user.roles|join(',') }}</td>
                                <td>{{ user.status }}</td>
                                <td>
                                    <a href="{{path('app_admin_manage_user', {id: user.id})}}" class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a href="#" class="btn btn-warning btn-circle btn-sm">
                                        <i class="fas fa-lock"></i>
                                    </a>
                                    <a href="#" class="btn btn-success btn-circle btn-sm">
                                        <i class="fas fa-lock-open"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}